<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDirector"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="99dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvDirector"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula" />

    <TextView
        android:id="@+id/tvDuracion"
        android:layout_width="89dp"
        android:layout_height="22dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDirector" />

    <TextView
        android:id="@+id/tvSala"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvDuracion"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha" />

    <ImageView
        android:id="@+id/ivEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvSala"
        app:layout_constraintStart_toEndOf="@+id/tvFecha"
        app:layout_constraintTop_toBottomOf="@+id/ivCaratula"
        app:srcCompat="@drawable/pg" />

    <ImageView
        android:id="@+id/ivCaratula"
        android:layout_width="119dp"
        android:layout_height="118dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/akira" />

    <ImageView
        android:id="@+id/ivFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDuracion"
        app:srcCompat="@android:drawable/btn_star_big_on" />
</androidx.constraintlayout.widget.ConstraintLayout>